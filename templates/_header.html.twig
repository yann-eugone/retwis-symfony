<header class="retwis-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-3 pt-1">
            {% if app.user %}
                <a class="btn btn-sm btn-outline-primary" href="{{ path('user_profile', {'username': app.user.username}) }}">Your profile</a>
            {% endif %}
            {% if is_granted(constant('App\\Post\\Voter\\PublishVoter::PUBLISH')) %}
                <a class="btn btn-sm btn-primary" href="{{ path('post_publish') }}">Publish</a>
            {% endif %}
        </div>
        <div class="col-6 text-center">
            <a class="retwis-header-logo text-dark" href="{{ path('index') }}">Retwis (with Symfony)</a>
        </div>
        <div class="col-3 text-right">
            {% if app.user %}
                <a class="btn btn-sm btn-outline-secondary" href="{{ path('logout') }}">Logout</a>
            {% else %}
                <a class="btn btn-sm btn-outline-secondary" href="{{ path('login') }}">Sign in</a>
                or
                <a class="btn btn-sm btn-primary" href="{{ path('register') }}">Sign up</a>
            {% endif %}
        </div>
    </div>
</header>
