<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Symfony Retwis - {% block title 'Welcome' %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div>
            <a href="{{ path('index') }}">Index</a> /
            {% if is_granted(constant('App\\Post\\Voter\\PublishVoter::PUBLISH')) %}
                <a href="{{ path('post_publish') }}">Publish</a> /
            {% endif %}
            {% if app.user %}
                Hello {{ app.user.username }}
                <a href="{{ path('user_profile', {'username': 'me'}) }}">Your profile</a> /
                <a href="{{ path('logout') }}">Logout</a>
            {% else %}
                <a href="{{ path('register') }}">Register</a> or <a href="{{ path('login') }}">Login</a>
            {% endif %}
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
