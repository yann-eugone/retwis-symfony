{% extends 'base.html.twig' %}

{% block title user.username %}

{% block body %}
    <h1>@{{ user.username }}</h1>
    {% if is_granted(constant('App\\Follow\\Voter\\FollowVoter::FOLLOW'), user) %}
        <a href="{{ path('user_follow', {'username': user.username}) }}">Follow</a>
    {% elseif is_granted(constant('App\\Follow\\Voter\\FollowVoter::UNFOLLOW'), user) %}
        <a href="{{ path('user_unfollow', {'username': user.username}) }}">Unfollow</a>
    {% endif %}
    {{ render(controller('App\\Controller\\UserController::followers', {id: user.id})) }}
    {{ render(controller('App\\Controller\\UserController::following', {id: user.id})) }}
    {{ render(controller('App\\Controller\\UserController::personalTimeline', {id: user.id})) }}
    {{ render(controller('App\\Controller\\UserController::mainTimeline', {id: user.id})) }}
{% endblock %}
